{
  "name": "@shabados/database-viewer",
  "version": "1.3.1",
  "description": "A database viewer for the Shabad OS database",
  "scripts": {
    "start": "npm-run-all -l -p start:*",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-deps": "npm-run-all -l -p install-deps:*",
    "install-deps:frontend": "cd frontend && npm install",
    "install-deps:backend": "cd backend && npm install",
    "postinstall": "npm run install-deps",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "test": "start-server-and-test start :3000 cypress:headless",
    "test:dev": "start-server-and-test start :3000 cypress",
    "lint:frontend":"cd frontend && npm run lint",
    "lint:backend":"cd backend && npm run lint",
    "lint":"npm-run-all -l -p lint:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShabadOS/database-viewer.git"
  },
  "author": "Shabad OS Team <team@shabados.com>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ShabadOS/database-viewer/issues"
  },
  "homepage": "https://github.com/ShabadOS/database-viewer#readme",
  "devDependencies": {
    "cypress": "^5.1.0",
    "eslint-plugin-cypress": "^2.11.1",
    "npm-run-all": "^4.1.5",
    "start-server-and-test": "^1.11.3"
  }
}
